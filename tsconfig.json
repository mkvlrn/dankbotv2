{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "ESNext",
    "rootDir": ".",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": "src",
    "paths": {
      "#commands/*": [
        "commands/*"
      ],
      "#events/*": [
        "events/*"
      ],
      "#types/*": [
        "types/*"
      ],
      "#utils/*": [
        "utils/*"
      ]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
